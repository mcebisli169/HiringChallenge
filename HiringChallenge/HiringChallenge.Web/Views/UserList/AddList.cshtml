@model HiringChallenge.Core.Dto.UserListCategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Liste Ekleme /</span> Liste Ekle
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form action="/Userlist/AddList" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Liste İsmi</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" placeholder="Lütfen liste ismini giriniz">
                        </div>
                        <select asp-for="CategoryIds" class="form-select" multiple aria-label="multiple select example">
                            @foreach (HiringChallenge.Core.Entity.Category item in ViewBag.Category)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


