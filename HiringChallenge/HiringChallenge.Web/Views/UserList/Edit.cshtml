@model HiringChallenge.Core.Entity.UserList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Liste Ekleme /</span> Liste Güncelle
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form action="/UserList/Edit?Id=@Model.Id" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="form-label">Liste İsmi</label>
                            <input asp-for="@Model.Name" type="text" class="form-control mb-3" placeholder="Lütfen Liste ismini giriniz">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>